{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "asimov/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "example/**/*"],
  "exclude": ["node_modules", "dist"]
}
